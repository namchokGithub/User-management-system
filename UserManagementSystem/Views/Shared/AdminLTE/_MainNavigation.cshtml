@*
    Name: _MainNavigation.cshtml
    Namespace: Views/Shared/AdminLTE
    Author: Namchok
*@

@using static UserManagementSystem.Helpers.NavigationIndicatorHelper;

<!-- Main Sidebar Container -->
<aside class="main-sidebar sidebar-dark-primary elevation-4">

    <!-- Brand Logo -->
    <a href="~/Home" class="brand-link">
        <img src="~/img/AdminLTELogo.png" alt="AdminLTE Logo" class="brand-image img-circle elevation-3"
             style="opacity: .8">
        <span class="brand-text font-weight-light">User Management System</span>
    </a>
    <!-- /.brand logo -->

    <!-- Sidebar -->
    <div class="sidebar">

        @* อนาคตทำการสร้าง partial view ตรวจสอบผู้ใช้งาน *@
        <!-- Sidebar user panel (optional) -->
        <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
                <img src="~/img/user2-160x160.jpg" class="img-circle elevation-2" alt="User Image">
            </div>
            <div class="info">
                <a href="#" class="d-block">Alexander Pierce</a>
            </div>
        </div>
        <!-- ./sidebar user panel-->

        <!-- Sidebar Menu -->
        <nav class="mt-2">
            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                <!-- Home navbar-->
                <li class="nav-item has-treeview menu-open">
                    <a asp-controller="Home" asp-action="Index" class="nav-link @Url.MakeActiveClass("home","index")">
                        <i class="nav-icon fas fa-tachometer-alt"></i>
                        <p>
                            Home <i class="right fas fa-angle-left"></i>
                        </p>
                    </a>
                </li>
                <!-- ./home navbar -->
                <!-- Connect navbar -->
                <li class="nav-item">
                    <a asp-controller="Home" asp-action="Connect" class="nav-link @Url.MakeActiveClass("home","connect")">
                        <i class="nav-icon fas fa-th"></i>
                        <p>
                            Connect
                        </p>
                    </a>
                </li>
                <!-- ./connect navbar -->
            </ul>
        </nav>
        <!-- /.sidebar-menu -->
    </div>
    <!-- /.sidebar -->
</aside>